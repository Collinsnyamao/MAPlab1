<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your Username:"
        android:id="@+id/Username2"
        android:inputType="text"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/linlay1"
       android:layout_below="@+id/Username2"
       >

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/fname2"
           android:hint="First name."
           android:layout_weight="1"
           android:inputType="text"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/lname2"
           android:hint="last name."
           android:layout_weight="1"
           android:inputType="text"
           />

   </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email2"
        android:hint="Enter your email address..."
        android:layout_below="@+id/linlay1"
        android:inputType="textEmailAddress"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:id="@+id/Dateandtime"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:id="@+id/buttonsumbitfive"
            android:text="Log In."
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you don't have an account you can sign up"
            android:textColor="@color/colorPrimary"
            android:id="@+id/text2"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dateandtime"
        android:text="Sign up..."
        android:id="@+id/signupbtn"
        />

</RelativeLayout>